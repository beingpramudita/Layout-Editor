<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/design_default_color_primary_dark"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btzero"
        android:layout_width="162dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/my_grey"
        android:text="@string/zero"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btntst"
        tools:text="Zero" />

    <Button
        android:id="@+id/btntst"
        android:layout_width="162dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/toast_btn"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btncnt"
        android:layout_width="162dp"
        android:layout_height="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="124dp"
        android:backgroundTint="@color/purple_700"
        android:text="@string/count_btn"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btzero" />

    <TextView
        android:id="@+id/txtview"
        android:layout_width="559dp"
        android:layout_height="554dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="36dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/_0"
        android:textAlignment="center"
        android:textColor="@color/purple_700"
        android:textSize="184sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btntst"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>